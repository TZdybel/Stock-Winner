<TabPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stockwinner.MainController">
    <tabs>
        <Tab closable="false" text="Wykres">
            <content>
                <GridPane fx:id="mainGridPane" alignment="center" hgap="10" vgap="10">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>

                    <ComboBox fx:id="valueSource" onAction="#handleDataSourceChange" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="0" />

                    <Button fx:id="tmpButton" text="temp btn" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="0" />

                    <Button fx:id="zoomResetButton" onAction="#onZoomReset" text="Reset zoom" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="0" />

                    <Text fx:id="hoverValue" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                    <LineChart fx:id="valueChart" onMouseDragged="#handleValueChartMouseDrag" onMousePressed="#handleValueChartMouseDragStart" onScroll="#handleValueChartScroll" prefHeight="640" prefWidth="650.0" title="Wykres wartoÅ›ci" GridPane.columnIndex="0" GridPane.columnSpan="9" GridPane.rowIndex="2" GridPane.rowSpan="9">

                        <xAxis>
                            <NumberAxis fx:id="valueXAxis" side="BOTTOM" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="valueYAxis" side="LEFT" />
                        </yAxis>
                    </LineChart>
                </GridPane>
            </content>
        </Tab>
        <Tab closable="false" text="Dane">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
        </Tab>
        <Tab closable="false" text="Strategie">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
        </Tab>
    </tabs>
</TabPane>
