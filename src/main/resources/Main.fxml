<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>

<GridPane fx:id="mainGridPane" alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stockwinner.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Button text="Dane" onAction="#showDataDialog"/>
    <Button text="Strategie" onAction="#showStratsDialog" GridPane.columnIndex="1"/>

    <ComboBox fx:id="valueSource" onAction="#handleDataSourceChange" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
    <Button fx:id="tmpButton" text="temp btn" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
    <Button fx:id="zoomResetButton" onAction="#onZoomReset" text="Reset zoom" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="1" />
    <Text fx:id="hoverValue" GridPane.columnIndex="3" GridPane.rowIndex="1" />

    <fx:include fx:id="chart" source="Chart.fxml"
                GridPane.columnSpan="10"
                GridPane.columnIndex="0"
                GridPane.rowIndex="2"
                GridPane.rowSpan="10"
    />

</GridPane>
